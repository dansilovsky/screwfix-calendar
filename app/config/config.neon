#			class: FrontModule\HomePresenter
#			setup:
#				- setHolidayYearStart(%holiday.yearStart%)
#				- setHolidayTotalCredits(%holiday.credits%)
#
#		daysPresenter:
#			class: ApiModule\DaysPresenter
#			setup:
#				- setHolidayYearStart(%holiday.yearStart%)
#				- setHolidayTotalCredits(%holiday.credits%)

